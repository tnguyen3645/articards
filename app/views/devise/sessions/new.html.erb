<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.label :remember_me, class: "remember-me center" %>
      <%= f.check_box :remember_me, class: "remember-me center" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "form-field" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
